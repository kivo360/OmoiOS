{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "backend/Dockerfile.worker",
    "watchPatterns": [
      "backend/omoi_os/**/*.py",
      "backend/omoi_os/**/*.yaml",
      "backend/omoi_os/**/*.json",
      "backend/omoi_os/**/*.md",
      "backend/config/**",
      "backend/pyproject.toml",
      "backend/Dockerfile.worker",
      "subsystems/spec-sandbox/**",
      "pyproject.toml",
      "uv.lock"
    ]
  },
  "deploy": {
    "startCommand": "python -m omoi_os.workers.orchestrator_worker",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
