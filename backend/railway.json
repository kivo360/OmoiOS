{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "backend/Dockerfile.api",
    "watchPatterns": [
      "**"
    ]
  },
  "deploy": {
    "startCommand": "python -m omoi_os.api.main",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}
