{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "backend/Dockerfile.api",
    "watchPatterns": [
      "backend/**",
      "subsystems/spec-sandbox/**",
      "pyproject.toml",
      "uv.lock"
    ]
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}
