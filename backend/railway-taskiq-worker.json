{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "backend/Dockerfile.worker",
    "watchPatterns": [
      "backend/omoi_os/tasks/**",
      "backend/omoi_os/services/**",
      "backend/omoi_os/models/**",
      "backend/omoi_os/config/**",
      "backend/pyproject.toml",
      "backend/uv.lock"
    ]
  },
  "deploy": {
    "startCommand": "taskiq worker omoi_os.tasks.broker:broker --workers 6",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
