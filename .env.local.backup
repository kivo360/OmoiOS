# Local development environment variables
# This file takes priority over .env
# Used for local docker-compose database connections

# Database Configuration (Docker Compose - Local Development)
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:15432/omoi_os

# Redis Configuration (Docker Compose - Local Development)
REDIS_URL=redis://localhost:16379/0

# LLM Configuration (can be overridden here for local testing)
# LLM_MODEL=openhands/claude-sonnet-4-5-20250929
# LLM_API_KEY=your_api_key_here
# LLM_BASE_URL=

# Task Queue Configuration
TQ_AGE_CEILING=3600
TQ_SLA_URGENCY_WINDOW=900
TQ_STARVATION_LIMIT=7200
TQ_BLOCKER_CEILING=10

# Approval Configuration
APPROVAL_TICKET_HUMAN_REVIEW=false
APPROVAL_APPROVAL_TIMEOUT_SECONDS=1800
APPROVAL_ON_REJECT=delete

# Validation Configuration
VALIDATION_ENABLED_BY_DEFAULT=false
VALIDATION_MAX_ITERATIONS=10
VALIDATION_ITERATION_TIMEOUT_MINUTES=30
VALIDATION_VALIDATOR_TIMEOUT_MINUTES=10
VALIDATION_KEEP_FAILED_ITERATIONS=true
VALIDATION_AUTO_CREATE_FOLLOWUPS=true
VALIDATION_DIAG_ON_VALIDATION_FAILURES=true
VALIDATION_DIAG_VALIDATION_FAILURES_THRESHOLD=2
VALIDATION_DIAG_ON_VALIDATION_TIMEOUT=true